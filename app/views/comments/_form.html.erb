<div class="mt-6 mb-6">
  <!-- コメント見出し -->
  <h3 class="text-lg font-semibold text-[#2D4F4B] mb-4">コメントを投稿する</h3>
  
  <!-- コメント入力フォーム -->
  <div class="space-y-4">
    <%= form_with model: comment, url: post_comments_path(post), local: false, class: "space-y-4" do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <!-- テキストエリア -->
      <%= f.text_area :body,
          class: "w-full px-3 py-2 border border-[#F0EAD6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#4AA398] focus:border-transparent resize-none",
          rows: "4",
          placeholder: "コメントを入力してください" %>
      
      <!-- 送信ボタン -->
      <div class="flex justify-start">
        <%= f.submit "投稿する",
            class: "px-6 py-2 bg-[#4AA398] hover:bg-[#3e8f8e] text-white font-medium rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg" %>
      </div>
    <% end %>
  </div>
</div>
