<tr id="comment-<%= comment.id %>">
  <td colspan="3" class="p-4 bg-gray-50 border-l-4 border-[#4AA398]">
    <%= form_with model: comment, url: comment_path(comment), class: "space-y-4" do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      
      <div class="space-y-3">
        <label class="block text-sm font-medium text-gray-700">
          コメントを編集
        </label>
        <%= f.text_area :body,
            class: "w-full px-3 py-2 border border-[#F0EAD6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#4AA398] focus:border-transparent resize-none shadow-sm",
            rows: "4",
            placeholder: "コメントを入力してください" %>
      </div>
      
      <div class="flex justify-start space-x-3">
        <%= f.submit "更新する",
            class: "px-4 py-2 bg-[#4AA398] hover:bg-[#3e8f8e] text-white font-medium rounded-lg transition-colors duration-200 shadow-sm" %>
        
        <!-- Turbo Stream を使ったキャンセル -->
        <%= link_to "キャンセル", comment_path(comment),
            method: :get,
            data: { turbo_stream: true },
            class: "px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm" %>
      </div>
    <% end %>
  </td>
</tr>
