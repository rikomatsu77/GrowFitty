<div class="bg-[#FFFCF4] min-h-screen py-8">
  <div class="flex justify-center">
    <h2 class="text-3xl md:text-4xl font-extrabold text-center text-[#444] tracking-tight mb-2">
      <%= t("devise.sessions.new.sign_in") %>
    </h2>
  </div>

<div class="w-full max-w-md mx-auto bg-white p-8 rounded-xl shadow">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-6">
    <%= f.label :email, t("activerecord.attributes.user.email"), class: "block text-gray-700 font-semibold mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      class: "w-full rounded-xl border border-gray-300 p-3 focus:outline-none focus:ring-2 focus:ring-orange-400" %>
  </div>

  <div class="field mb-6">
    <%= f.label :password, t("activerecord.attributes.user.password"), class: "block text-gray-700 font-semibold mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password",
      class: "w-full rounded-xl border border-gray-300 p-3 focus:outline-none focus:ring-2 focus:ring-orange-400" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-6 flex items-center gap-2">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-orange-400 border-gray-300 rounded focus:ring-orange-400" %>
      <%= f.label :remember_me, t("activerecord.attributes.user.remember_me"), class: "text-gray-700" %>
    </div>
  <% end %>

  <div class="actions flex justify-center">
    <%= f.submit t("devise.sessions.new.sign_in"),
      class: "btn border border-[#53CBFA] text-[#53CBFA] bg-white hover:bg-[#53CBFA]/10 font-semibold px-6 py-2 rounded-lg" %>
  </div>
<% end %>

  <div class="mt-6 text-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
