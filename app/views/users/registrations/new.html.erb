<div class="bg-[#FFFCF4] py-8">
  <div class="flex justify-center">
    <h2 class="text-3xl md:text-4xl font-extrabold text-center text-[#444] tracking-tight mb-2">
      <%= t("devise.registrations.new.sign_up") %>
    </h2>
  </div>

<div class="w-full max-w-md mx-auto bg-white p-8 rounded-xl shadow">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t("activerecord.attributes.user.email"), class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      class: "w-full rounded-xl border border-gray-300 p-3 focus:outline-none focus:ring-2 focus:ring-orange-400" %>
  </div>

  <div class="field mb-6">
    <%= f.label :password, t("activerecord.attributes.user.password"), class: "block text-gray-700 font-semibold mb-2" %>
    <% if @minimum_password_length %>
    <em class="text-sm text-gray-500">
      (<%= t("devise.registrations.new.minimum_characters", count: @minimum_password_length) %>)
    </em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",
      class: "w-full rounded-xl border border-gray-300 p-3 mt-2 focus:outline-none focus:ring-2 focus:ring-orange-400" %>
  </div>

  <div class="field mb-6">
    <%= f.label :password_confirmation, t("activerecord.attributes.user.password_confirmation"), class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
      class: "w-full rounded-xl border border-gray-300 p-3 focus:outline-none focus:ring-2 focus:ring-orange-400" %>
  </div>

  <div class="actions flex justify-center">
        <%= f.submit t("devise.registrations.new.sign_up"),
              class: "btn border border-[#FF6164] text-[#FF6164] bg-white hover:bg-[#FF6164]/10 font-semibold px-6 py-2 rounded-lg" %>
  </div>
<% end %>

  <div class="mt-6 text-center">
    <%= render "users/shared/links" %>
  </div>
  </div>
</div>
