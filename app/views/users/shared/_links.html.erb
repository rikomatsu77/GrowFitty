<%- if controller_name != 'sessions' %>
  <div class="inline-block">
    <%= link_to t("devise.shared.links.sign_in"), new_session_path(resource_name),
      class: "btn border border-[#53CBFA] text-[#53CBFA] bg-white hover:bg-[#53CBFA]/10 px-6 py-2 rounded-lg font-semibold" %>
  </div><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="inline-block mt-2">
    <%= link_to t("devise.shared.links.sign_up"), new_registration_path(resource_name),
      class: "btn border border-[#FF6164] text-[#FF6164] bg-white hover:bg-[#FF6164]/10 px-6 py-2 rounded-lg font-semibold" %>
  </div><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("devise.shared.links.forgot_your_password"), new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("devise.shared.links.didn_t_receive_confirmation_instructions"), new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("devise.shared.links.didn_t_receive_unlock_instructions"), new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="my-4 text-center text-gray-500 font-semibold">ー または ー</div>
  <div class="space-y-3">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% if provider == :google_oauth2 %>
        <%= button_to omniauth_authorize_path(resource_name, provider),
              data: { turbo: false },
              class: "w-full flex items-center justify-center gap-3 bg-white border border-gray-300 rounded-lg px-4 py-2 shadow hover:bg-gray-50" do %>
          <!-- Google アイコン -->
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
            <path fill="#4285F4" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.5 30.47 0 24 0 14.62 0 6.5 5.38 2.55 13.22l7.98 6.19C12.31 13.36 17.73 9.5 24 9.5z"/>
            <path fill="#34A853" d="M46.1 24.55c0-1.56-.14-3.06-.39-4.5H24v9h12.55c-.55 2.96-2.22 5.47-4.72 7.15l7.27 5.65C43.74 37.17 46.1 31.27 46.1 24.55z"/>
            <path fill="#FBBC05" d="M10.53 28.41a14.5 14.5 0 0 1-.76-4.41c0-1.53.27-3.01.76-4.41l-7.98-6.19A23.83 23.83 0 0 0 0 24c0 3.88.93 7.54 2.55 10.82l7.98-6.41z"/>
            <path fill="#EA4335" d="M24 48c6.47 0 11.9-2.12 15.87-5.77l-7.27-5.65c-2.05 1.39-4.69 2.22-8.6 2.22-6.27 0-11.69-3.86-13.47-9.18l-7.98 6.41C6.5 42.62 14.62 48 24 48z"/>
          </svg>
          <!-- ボタンのラベル -->
          <span class="text-gray-700 font-medium">Googleでログイン</span>
      <% end %>

      <% elsif provider == :line %>
        <!-- LINE ログインボタン）-->
        <%= button_to omniauth_authorize_path(resource_name, provider),
        data: { turbo: false },
        class: "w-full flex items-center justify-center bg-transparent border-0 p-2 hover:opacity-80 active:opacity-60 transition-opacity duration-200" do %>
    <%= image_tag "line_login_base.png",
          alt: "LINEでログイン",
          class: "h-10 w-auto flex-shrink-0",
          srcset: "#{asset_path("line_login_base.png")} 1x, #{asset_path("line_login_base@2x.png")} 2x" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
