<div class="bg-[#FFFCF4] min-h-screen py-8">
  <div class="flex justify-center">
    <h2 class="text-3xl md:text-4xl font-extrabold text-center text-[#444] tracking-tight mb-2">
      パスワード変更
    </h2>
  </div>

  <div class="w-full max-w-md mx-auto bg-white p-8 rounded-xl shadow">
    <%= form_for(resource,
          as: resource_name,
          url: password_path(resource_name),
          html: { method: :put }) do |f| %>

      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- 新しいパスワード -->
      <div class="field mb-6">
        <%= f.label :password,
              "新しいパスワード",
              class: "block text-gray-700 font-semibold mb-2" %>

        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-1">
            ※ <%= @minimum_password_length %>文字以上で入力してください
          </p>
        <% end %>

        <%= f.password_field :password,
              autofocus: true,
              autocomplete: "new-password",
              class: "w-full rounded-xl border border-gray-300 p-3
                      focus:outline-none focus:ring-2 focus:ring-orange-400" %>
      </div>

      <!-- 新しいパスワード（確認） -->
      <div class="field mb-6">
        <%= f.label :password_confirmation,
              "新しいパスワード（確認）",
              class: "block text-gray-700 font-semibold mb-2" %>

        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full rounded-xl border border-gray-300 p-3
                      focus:outline-none focus:ring-2 focus:ring-orange-400" %>
      </div>

      <!-- 送信ボタン -->
      <div class="actions flex justify-center">
        <%= f.submit "パスワードを変更する",
              class: "btn border border-[#53CBFA] text-[#53CBFA]
                      bg-white hover:bg-[#53CBFA]/10
                      font-semibold px-6 py-2 rounded-lg" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
