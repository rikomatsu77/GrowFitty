<h1 class="text-center text-green-600 text-2xl mt-6">サイズ予測</h1>

<div class="container mx-auto bg-white p-6 rounded-lg shadow-lg">
  <%= form_with url: create_prediction_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <label class="block text-gray-700">性別 <span class="text-red-500">*</span></label>
      <%= f.select :gender, [["男性", "male"], ["女性", "female"]], { prompt: "選択してください" }, class: "border p-2 rounded-lg w-full", required: true %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700">生年月日 <span class="text-red-500">*</span></label>
      <%= f.date_field :birth_date, class: "border p-2 rounded-lg w-full", required: true %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700">測定日 <span class="text-red-500">*</span></label>
      <%= f.date_field :measurement_date, class: "border p-2 rounded-lg w-full", required: true %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700">測定タイプ <span class="text-red-500">*</span></label>
      <%= f.select :measurement_type, [["身長(cm)", "height"], ["体重(kg)", "weight"]], { prompt: "選択してください" }, class: "border p-2 rounded-lg w-full", required: true %>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700">測定値 <span class="text-red-500">*</span></label>
      <%= f.number_field :value, step: 0.1, class: "border p-2 rounded-lg w-full", required: true %>
    </div>

    <div class="text-center mt-6">
      <%= f.submit "予測する", class: "btn bg-green-500 text-white rounded-lg px-6 py-2" %>
    </div>
  <% end %>
</div>
