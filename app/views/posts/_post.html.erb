<div class="post bg-[#FFFCF4] border border-[#F0EAD6] rounded-lg p-6 mb-6 shadow">
  <div class="card-body p-4 sm:p-6">
    <!-- 画像表示エリア -->
    <div class="w-full h-40 sm:h-48 md:h-52 lg:h-56 bg-base-200 rounded-lg overflow-hidden mb-4 flex items-center justify-center">
      <% if post.post_image.present? %>
        <%= image_tag post.post_image.url,
          alt: "#{post.title}の投稿画像",
          class: "max-w-full max-h-full object-contain" %>
      <% else %>
        <%= image_tag "post_placeholder.png",
          alt: "投稿画像なし",
          class: "max-w-full max-h-full object-contain" %>
      <% end %>
    </div>

    <!-- タイトル -->
    <% if post.title.present? %>
      <h2 class="text-xl font-semibold text-[#3F8378] mb-2">
        <%= link_to post.title, post_path(post), class: "hover:underline text-[#3F8378]" %>
      </h2>
    <% end %>

    <!-- 本文 -->
    <% if post.body.present? %>
      <p class="text-[#4A6F6A]"><%= post.body %></p>
    <% end %>

    <!-- タグ表示 -->
    <% if post.tags.any? %>
      <div class="mb-4">
        <div class="flex flex-wrap gap-2">
          <% post.tags.limit(4).each do |tag| %>
            <%= link_to posts_path(tag: tag.name),
                class: "inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-[#F8FFFE] border border-[#4AA398] text-[#2D4F4B] hover:bg-[#4AA398] hover:text-white transition-colors duration-200" do %>
              <span class="mr-1">#</span><%= tag.name %>
            <% end %>
          <% end %>
          <% if post.tags.count > 4 %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-[#F0EAD6] text-[#7A736A]">
              +<%= post.tags.count - 4 %>個
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- ブックマークボタン（ログインユーザーかつ他人の投稿のみ） -->
    <% if user_signed_in? && !current_user.own?(post) %>
      <div class="mt-4 flex justify-end">
        <%= render "posts/bookmark_buttons", post: post %>
      </div>
    <% end %>
  </div>
</div>
