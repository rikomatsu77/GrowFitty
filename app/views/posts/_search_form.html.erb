<%= search_form_with model: q, url: url, local: true, class: "mb-6" do |f| %>
  <div class="flex flex-col sm:flex-row gap-2">
    <%= f.search_field :title_or_body_cont,
        placeholder: t("views.defaults.search_word"),
        class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#4AA398]",
        value: params.dig(:q, :title_or_body_cont) %>

    <% if @selected_tag.present? %>
      <%= hidden_field_tag :tag, @selected_tag %>
    <% end %>

    <%= f.submit "検索",
        class: "px-6 py-2 bg-[#4AA398] text-white rounded-lg hover:bg-[#3e8f8e] transition-colors duration-200 cursor-pointer" %>
  </div>
<% end %>
